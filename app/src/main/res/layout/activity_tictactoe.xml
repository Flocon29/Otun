<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    android:background="@drawable/fondotun"
    tools:context="enib.otun.TictactoeActivity">

    <include layout="@layout/content_tictactoe" />

    <android.support.design.widget.FloatingActionButton android:id="@+id/fab"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="bottom|end" android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_menu_view" />

    <TextView
        android:id="@+id/moveTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal"
        android:text="TIC TAC TOE"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/grille"
        android:layout_marginTop="50dp"
        android:id="@+id/tb_grille">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_weight="33"
            android:columnCount="3">


            <ImageView
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="33"
                android:background="@mipmap/vide"
                android:id="@+id/case1"
                android:layout_column="0" />

            <ImageView
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="33"
                android:background="@mipmap/vide"
                android:id="@+id/case2"
                android:layout_column="1" />

            <ImageView
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_weight="33"
                android:background="@mipmap/vide"
                android:id="@+id/case3"
                android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="33"
            android:columnCount="3">


            <ImageView
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:layout_weight="33"
                android:background="@mipmap/vide"
                android:id="@+id/case4"
                android:layout_column="0" />

            <ImageView
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="33"
                android:background="@mipmap/vide"
                android:id="@+id/case5"
                android:layout_column="1" />

            <ImageView
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_weight="33"
                android:background="@mipmap/vide"
                android:id="@+id/case6"
                android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="33"
            android:columnCount="3">


            <ImageView
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:background="@mipmap/vide"
                android:layout_weight="33"
                android:id="@+id/case7"
                android:layout_column="0" />

            <ImageView
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="33"
                android:background="@mipmap/vide"
                android:id="@+id/case8"
                android:layout_column="1" />

            <ImageView
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_weight="33"
                android:background="@mipmap/vide"
                android:id="@+id/case9"
                android:layout_column="2" />
        </TableRow>
    </TableLayout>

</android.support.design.widget.CoordinatorLayout>